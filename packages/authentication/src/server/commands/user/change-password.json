{
    "$schema": "https://raw.githubusercontent.com/npenin/akala/main/packages/commands/command-schema.json",
    "": {
        "inject": [
            "param.0",
            "param.1"
        ]
    },
    "http": {
        "bindings": {
            "user": {
                "source": "$state.store.User",
                "where": {
                    "name": "body.username"
                }
            }
        },
        "inject": [
            "auth",
            "body.password"
        ],
        "type": "json",
        "auth": {
            "required": true,
            "mode": "body",
            "inject": [
                "bindings.user",
                "body.oldPassword"
            ]
        },
        "route": "/update-password",
        "method": "post"
    },
    "html": {
        "inject": [
            "form.username",
            "form.password",
            "form.oldPassword"
        ]
    }
}
