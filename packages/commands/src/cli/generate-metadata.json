{
    "$schema": "https://raw.githubusercontent.com/npenin/akala/master/packages/commands/command-schema.json",
    "cli": {
        "inject": [
            "options.name",
            "options.commandPath",
            "options.output",
            "options"
        ],
        "usage": "generate-metadata [commandPath] [output]",
        "options": {
            "name": {
                "needsValue": true
            },
            "noStandalone": {
                "needsValue": false,
                "aliases": [
                    "no-standalone"
                ]
            },
            "noContainer": {
                "needsValue": false,
                "aliases": [
                    "no-container"
                ]
            },
            "noProxy": {
                "needsValue": false,
                "aliases": [
                    "no-proxy"
                ]
            },
            "noMetadata": {
                "needsValue": false,
                "aliases": [
                    "no-metadata"
                ]
            }
        }
    }
}