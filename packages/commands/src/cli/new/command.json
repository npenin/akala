{
    "$schema": "https://raw.githubusercontent.com/npenin/akala/main/packages/commands/command-schema.json",
    "cli": {
        "usage": "cmd <name> [destination]",
        "options": {
            "force": {
                "aliases": [
                    "f"
                ]
            },
            "options.destination": {
                "normalize": true
            }
        },
        "inject": [
            "options.name",
            "options",
            "options.destination"
        ]
    },
    "doc": {
        "description": "create a new command with the given `name` and `destination` (if present, cwd otherwise)"
    }
}