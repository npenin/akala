{
    "$schema": "https://raw.githubusercontent.com/npenin/akala/master/packages/commands/command-schema.json",
    "cli": {
        "usage": "cc <name> [destination]",
        "options": {
            "force": {
                "aliases": [
                    "f"
                ]
            }
        },
        "inject": [
            "options.name",
            "options",
            "options.destination"
        ]
    },
    "doc": {
        "description": "create a new command configuration (json file) with the given name and destination (if present, cwd otherwise)"
    }
}