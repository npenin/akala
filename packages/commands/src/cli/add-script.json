{
    "$schema": "https://raw.githubusercontent.com/npenin/akala/master/packages/commands/command-schema.json",
    "cli": {
        "inject": [
            "options.name",
            "options.commands",
            "options.metadataFile",
            "options.typescriptFile"
        ],
        "usage": "add-script <commands> [typescriptFile] [metadataFile]",
        "options": {
            "name": {
                "needsValue": true
            }
        }
    }
}