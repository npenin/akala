{
    "$schema": "https://raw.githubusercontent.com/npenin/akala/main/packages/commands/command-schema.json",
    "": {
        "inject": [
            "params.0",
            "params.1",
            "params.2",
            "params.3"
        ]
    },
    "cli": {
        "inject": [
            "options",
            "params.0",
            "options.name",
            "params.1"
        ],
        "options": {
            "name": {
                "needsValue": true
            },
            "recursive": {
                "aliases": [
                    "R"
                ],
                "doc": "instructs the discovery process to analyze sub folders"
            },
            "flatten": {
                "aliases": [
                    "f"
                ],
                "doc": "instructs the discovery process to ignore sub folder _names_ when generating commands"
            }
        }
    }
}
