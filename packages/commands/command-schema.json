{
    "definitions": {
        "inject": {
            "$id": "#/inject",
            "type": "object",
            "title": "The inject Schema",
            "description": "Dependencies to be inserted during runtime by the provider/trigger",
            "required": [
                "inject"
            ],
            "properties": {
                "inject": {
                    "type": "array",
                    "examples": [
                        "param.0",
                        "$container",
                        "$injector",
                        "options.name (if the provider provides options)",
                        "connectionAsContainer"
                    ]
                }
            }
        }
    },
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/npenin/akala/master/packages/commands/command-schema.json",
    "type": "object",
    "title": "The Config Schema",
    "description": "This is the providers/triggers configuration",
    "required": [
        ""
    ],
    "properties": {
        "cli": {
            "allOf": [
                {
                    "$ref": "#/definitions/inject"
                },
                {
                    "$id": "#/cli",
                    "type": "object",
                    "title": "The cli Schema",
                    "properties": {
                        "options": {
                            "$id": "#/cli/properties/options",
                            "type": "object",
                            "title": "The cli options Schema",
                            "properties": {
                                "alias": {
                                    "type": "object",
                                    "patternProperties": {
                                        "^.+$": {
                                            "type": "array",
                                            "items": {
                                                "type": "string"
                                            }
                                        }
                                    }
                                },
                                "array": {
                                    "oneOf": [
                                        {
                                            "type": "array",
                                            "items": {
                                                "type": "string"
                                            }
                                        },
                                        {
                                            "type": "object",
                                            "properties": {
                                                "key": {
                                                    "type": "string"
                                                },
                                                "boolean": {
                                                    "type": "boolean"
                                                },
                                                "number": {
                                                    "type": "boolean"
                                                }
                                            }
                                        }
                                    ]
                                },
                                "boolean": {
                                    "type": "array",
                                    "items": {
                                        "type": "boolean"
                                    }
                                },
                                "normalize": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                },
                                "number": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                },
                                "string": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                },
                                "count": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                }
            ]
        },
        "fs": {
            "allOf": [
                {
                    "$ref": "#/definitions/inject"
                },
                {
                    "$id": "#/fs",
                    "type": "object",
                    "title": "The fs Schema",
                    "properties": {
                        "path": {
                            "$id": "#/fs/properties/path",
                            "type": "string",
                            "title": "The Path Schema",
                            "default": "",
                            "examples": [
                                "dist\\cli\\generate-metadata.js"
                            ]
                        },
                        "source": {
                            "$id": "#/fs/properties/path",
                            "type": "string",
                            "title": "The Path Schema",
                            "default": "",
                            "examples": [
                                "src\\cli\\generate-metadata.ts"
                            ]
                        }
                    }
                }
            ]
        },
        "": {
            "$ref": "#/definitions/inject"
        }
    }
}