{
    "definitions": {
        "config": {
            "allOf": [
                {
                    "$ref": "#/definitions/inject"
                },
                {
                    "properties": {
                        "auth": {
                            "$ref": "#/definitions/inject"
                        }
                    }
                }
            ]
        },
        "inject": {
            "$id": "#/inject",
            "type": "object",
            "title": "The inject Schema",
            "description": "Dependencies to be inserted during runtime by the provider/trigger",
            "required": [
                "inject"
            ],
            "properties": {
                "inject": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "examples": [
                            "param.0",
                            "$container",
                            "$injector",
                            "options.name (if the provider provides options)",
                            "connectionAsContainer"
                        ]
                    }
                }
            }
        },
        "doc": {
            "$id": "#/doc",
            "type": "object",
            "title": "the doc Schema",
            "properties": {
                "description": {
                    "type": "string",
                    "title": "The command description",
                    "description": "Decribe what your command is doing. Ideally in markdown format."
                },
                "options": {
                    "type": "object",
                    "title": "The options schema",
                    "description": "Decribe each parameter of your command. Ideally in markdown format.",
                    "patternProperties": {
                        "^.+$": {
                            "type": "string",
                            "description": "Decribe the parameter your command. Ideally in markdown format."
                        }
                    }
                }
            }
        }
    },
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/npenin/akala/main/packages/commands/command-schema.json",
    "type": "object",
    "title": "The Config Schema",
    "description": "This is the providers/triggers configuration",
    "required": [
        ""
    ],
    "properties": {
        "cli": {
            "allOf": [
                {
                    "$ref": "#/definitions/config"
                },
                {
                    "$id": "#/cli",
                    "type": "object",
                    "title": "The cli Schema",
                    "properties": {
                        "usage": {
                            "$id": "#/cli/properties/usage",
                            "type": "string",
                            "title": "The cli usage Schema",
                            "examples": [
                                "cmd <mandatory> [optional]",
                                "cmd <mandatory>",
                                "cmd [optional]"
                            ]
                        },
                        "options": {
                            "$id": "#/cli/properties/options",
                            "type": "object",
                            "title": "The cli options Schema",
                            "patternProperties": {
                                "^.+$": {
                                    "type": "object",
                                    "properties": {
                                        "aliases": {
                                            "type": "array",
                                            "items": {
                                                "type": "string"
                                            }
                                        },
                                        "needsValue": {
                                            "type": "boolean"
                                        },
                                        "caseSensitive": {
                                            "type": "boolean"
                                        },
                                        "doc": {
                                            "type": "string"
                                        },
                                        "normalize": {
                                            "type": [
                                                "boolean",
                                                "string"
                                            ]
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            ]
        },
        "http": {
            "allOf": [
                {
                    "$ref": "#/definitions/config"
                },
                {
                    "$id": "#/http",
                    "type": "object",
                    "title": "The http Schema",
                    "required": [
                        "method",
                        "route"
                    ],
                    "properties": {
                        "method": {
                            "$id": "#/http/properties/method",
                            "type": "string",
                            "title": "The http method Schema",
                            "examples": [
                                "get",
                                "post",
                                "put",
                                "delete"
                            ]
                        },
                        "route": {
                            "$id": "#/http/properties/route",
                            "type": "string",
                            "title": "The http route Schema",
                            "examples": [
                                "/",
                                "/value",
                                "/{param}",
                                "/{optionalParam}?"
                            ]
                        },
                        "type": {
                            "$id": "#/http/properties/type",
                            "type": "string",
                            "enum": [
                                "json",
                                "xml",
                                "text",
                                "raw"
                            ],
                            "title": "The http type Schema"
                        },
                        "auth": {
                            "allOf": [
                                {
                                    "$ref": "#/definitions/config"
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "mode": {
                                            "anyOf": [
                                                {
                                                    "type": "string",
                                                    "enum": [
                                                        "basic",
                                                        "body",
                                                        "bearer"
                                                    ]
                                                },
                                                {
                                                    "type": "object",
                                                    "properties": {
                                                        "type": {
                                                            "type": "string",
                                                            "enum": [
                                                                "query",
                                                                "header",
                                                                "cookie"
                                                            ]
                                                        },
                                                        "name": {
                                                            "type": "string"
                                                        }
                                                    }
                                                }
                                            ]
                                        }
                                    }
                                }
                            ]
                        }
                    }
                }
            ]
        },
        "": {
            "$ref": "#/definitions/config"
        },
        "doc": {
            "allOf": [
                {
                    "$ref": "#/definitions/config"
                },
                {
                    "$ref": "#/definitions/doc"
                },
                {
                    "$id": "#/doc-translation",
                    "type": "object",
                    "title": "the translated documentation to any language",
                    "properties": {
                        "translations": {
                            "type": "object",
                            "patternProperties": {
                                "^[a-z]{2}-[A-Z]{2}$": {
                                    "$ref": "#/definitions/doc"
                                }
                            }
                        }
                    }
                }
            ]
        },
        "schema": {
            "allOf": [
                {
                    "$ref": "#/definitions/config"
                },
                {
                    "$id": "#/schema",
                    "type": "object",
                    "title": "The schema Schema",
                    "properties": {
                        "$defs": {
                            "$id": "#/schema/properties/schema/defs",
                            "type": "object",
                            "title": "The schema definitions",
                            "patternProperties": {
                                "^.+$": {
                                    "$ref": "http://json-schema.org/draft-07/schema#"
                                }
                            }
                        }
                    }
                }
            ]
        }
    }
}
