{
    "name": "@akala/commands",
    "commands": [
        {
            "name": "add-script",
            "inject": [],
            "config": {
                "fs": {
                    "path": "dist/cli/add-script.js",
                    "source": "src/cli/add-script.ts",
                    "inject": []
                },
                "cli": {
                    "inject": [
                        "options.name",
                        "options.commands",
                        "options.metadataFile",
                        "options.typescriptFile"
                    ],
                    "usage": "add-script <commands> [typescriptFile] [metadataFile]",
                    "options": {
                        "name": {
                            "needsValue": true
                        }
                    }
                },
                "": {
                    "inject": []
                }
            }
        },
        {
            "name": "generate",
            "inject": [],
            "config": {
                "fs": {
                    "path": "dist/cli/generate.js",
                    "source": "src/cli/generate.ts",
                    "inject": [
                        "param.0",
                        "param.1",
                        "param.2"
                    ]
                },
                "": {
                    "inject": [
                        "param.0",
                        "param.1",
                        "param.2"
                    ]
                },
                "cli": {
                    "inject": [
                        "param.0",
                        "options.name",
                        "param.1"
                    ],
                    "options": {
                        "name": {
                            "needsValue": true
                        }
                    }
                }
            }
        },
        {
            "name": "generate-declaration",
            "inject": [],
            "config": {
                "fs": {
                    "path": "dist/cli/generate-declaration.js",
                    "source": "src/cli/generate-declaration.ts",
                    "inject": [
                        "param.0",
                        "param.1"
                    ]
                },
                "cli": {
                    "inject": [
                        "options.name",
                        "param.0",
                        "param.1"
                    ]
                },
                "": {
                    "inject": []
                }
            }
        },
        {
            "name": "generate-metadata",
            "inject": [],
            "config": {
                "fs": {
                    "path": "dist/cli/generate-metadata.js",
                    "source": "src/cli/generate-metadata.ts",
                    "inject": []
                },
                "cli": {
                    "inject": [
                        "options.name",
                        "options.commandPath",
                        "options.output",
                        "options"
                    ],
                    "usage": "generate-metadata [commandPath] [output]",
                    "options": {
                        "name": {
                            "needsValue": true
                        }
                    }
                },
                "": {
                    "inject": []
                }
            }
        },
        {
            "name": "new",
            "inject": [],
            "config": {
                "fs": {
                    "path": "dist/cli/new.js",
                    "source": "src/cli/new.ts",
                    "inject": []
                },
                "cli": {
                    "usage": "new <action> <name> [destination]",
                    "options": {
                        "force": {
                            "aliases": [
                                "f"
                            ]
                        }
                    },
                    "inject": [
                        "options.action",
                        "options.name",
                        "options",
                        "options.destination"
                    ]
                },
                "": {
                    "inject": []
                }
            }
        },
        {
            "name": "implement",
            "inject": [],
            "config": {
                "fs": {
                    "path": "dist/cli/implement.js",
                    "source": "src/cli/implement.ts",
                    "inject": [
                        "param.0",
                        "param.1"
                    ]
                },
                "": {
                    "inject": [
                        "param.0",
                        "param.1"
                    ]
                },
                "cli": {
                    "usage": "implement <commands> <destination>",
                    "inject": [
                        "options.commands",
                        "options.destination",
                        "options"
                    ],
                    "options": {
                        "destination": {
                            "normalize": true
                        },
                        "force": {
                            "aliases": [
                                "f"
                            ]
                        }
                    }
                }
            }
        },
        {
            "name": "serve",
            "inject": [],
            "config": {
                "fs": {
                    "path": "dist/cli/serve.js",
                    "source": "src/cli/serve.ts",
                    "inject": []
                },
                "cli": {
                    "inject": [
                        "$container",
                        "options"
                    ]
                },
                "": {
                    "inject": []
                }
            }
        },
        {
            "name": "register",
            "inject": [],
            "config": {
                "fs": {
                    "path": "dist/cli/register.js",
                    "source": "src/cli/register.ts",
                    "inject": [
                        "param.0",
                        "param.1",
                        "param.2"
                    ]
                },
                "": {
                    "inject": []
                }
            }
        }
    ],
    "$schema": "https://raw.githubusercontent.com/npenin/akala-commands/master/schema.json"
}