            "name": "add-script",
            "config": {
                "fs": {
                    "path": "dist/esm/cli/add-script.js",
                    "source": "src/cli/add-script.ts",
                    "inject": [
                        "params.0",
                        "params.1",
                        "params.2",
                        "params.3"
                    ]
