{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "composite": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictBindCallApply": true,
    "sourceMap": true,
    "target": "ESNext",
    "moduleResolution": "node16",
    "module": "ES2020"
  }
}