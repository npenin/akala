{
    "$schema": "https://raw.githubusercontent.com/npenin/akala/main/packages/commands/command-schema.json",
    "cli": {
        "usage": "route <route> <path>",
        "inject": [
            "options.route",
            "options.path",
            "options",
            "cwd"
        ],
        "options": {
            "get": {
                "needsValue": false
            },
            "use": {
                "needsValue": false
            },
            "pre": {
                "needsValue": false
            },
            "auth": {
                "needsValue": false
            },
            "app": {
                "needsValue": false
            },
            "path": {
                "needsValue": true,
                "normalize": true
            },
            "route": {
                "needsValue": true,
                "normalize": true,
                "doc": "root path for the route"
            }
        }
    },
    "": {
        "inject": [
            "param.0",
            "param.1",
            "param.2",
            "param.3"
        ]
    }
}
