{
    "extends": "../tsconfig.settings.cjs.json",
    "compileOnSave": true,
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist/cjs",
        "customConditions": [
            "require",
            "node"
        ],
    },
    "include": [
        "src/*.ts",
        "src/**/*.ts"
    ],
    "exclude": [
        "src/akala.mts",
        "src/fork.ts",
        "src/cli.ts"
    ],
    "references": [
        {
            "path": "../core/tsconfig.cjs.json"
        },
        {
            "path": "../commands/tsconfig.cjs.json"
        },
        {
            "path": "../cli/tsconfig.cjs.json"
        },
        {
            "path": "../config/tsconfig.cjs.json"
        }
    ]
}