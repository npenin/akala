{
    "$schema": "https://raw.githubusercontent.com/npenin/akala/main/packages/commands/command-schema.json",
    "": {
        "inject": [
            "params.0",
            "params.1",
            "params.2",
            "params.3",
            "params.4"
        ]
    },
    "cli": {
        "inject": [
            "options.name",
            "options.path",
            "options.runtime",
            "cwd",
            "options"
        ],
        "options": {
            "commandable": {
                "aliases": [
                    "c"
                ],
                "needsValue": false
            },
            "stateless": {
                "aliases": [
                    "s"
                ],
                "needsValue": false
            },
            "runtime": {
                "aliases": [
                    "r"
                ],
                "needsValue": true
            }
        },
        "usage": "map <name> <path>"
    }
}
