{
    "$schema": "https://raw.githubusercontent.com/npenin/akala/main/packages/commands/command-schema.json",
    "": {
        "inject": [
            "params.0",
            "$container",
            "params.1"
        ]
    },
    "cli": {
        "usage": "discover <path> [name]",
        "options": {
            "path": {
                "normalize": true
            }
        },
        "inject": [
            "options.path",
            "$container",
            "options.name",
            "context.currentWorkingDirectory"
        ]
    }
}
