{
    "$schema": "https://raw.githubusercontent.com/npenin/akala/main/packages/commands/command-schema.json",
    "": {
        "inject": [
            "params.0",
            "$container"
        ]
    },
    "cli": {
        "inject": [
            "options.process",
            "$container"
        ],
        "options": {
            "process": {
                "doc": "process to stop. Stops all the processes otherwise (including pm)."
            }
        },
        "usage": "stop [process]"
    },
    "html-form": {
        "inject": [
            "params.0",
            "$container"
        ]
    },
    "schema": {
        "inject": [
            "params.0",
            "$container"
        ],
        "$defs": {
            "params.0": {
                "type": "string"
            }
        }
    }
}
