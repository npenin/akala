{
    "$schema": "https://raw.githubusercontent.com/npenin/akala/master/packages/commands/command-schema.json",
    "": {
        "inject": [
            "param.0",
            "param.1",
            "param.2",
            "param.3"
        ]
    },
    "cli": {
        "inject": [
            "options.name",
            "options.path",
            "cwd",
            "options"
        ],
        "options": {
            "commandable": {
                "aliases": [
                    "c"
                ],
                "needsValue": false
            },
            "stateless": {
                "aliases": [
                    "s"
                ],
                "needsValue": false
            }
        },
        "usage": "map <name> <path>"
    }
}