{
    "$schema": "https://raw.githubusercontent.com/npenin/akala/main/packages/commands/command-schema.json",
    "fs": {
        "inject": [
            "params.0",
            "params.1",
            "params.2",
            "params.3"
        ]
    },
    "cli": {
        "usage": "install [package] [version]",
        "inject": [
            "context.abort.signal",
            "options.package",
            "options.version",
            "options.save"
        ],
        "options": {
            "save": {
                "needsValue": true,
                "doc": "expected value is true | false | dev | peer | optional | test. Default: true"
            }
        }
    },
    "": {
        "inject": [
            "params.0",
            "params.1",
            "params.2",
            "params.3"
        ]
    }
}
