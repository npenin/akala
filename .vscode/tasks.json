{
	"version": "2.0.0",
	"tasks": [
		{
			"options": {
				"env": {
					"CHOKIDAR_USEPOLLING": "1"
				}
			},
			"command": "yarn",
			"args": [
				"tsc",
				"-b",
				"packages/tsconfig.esm.json",
				"--watch"
			],
			"problemMatcher": [
				"$tsc-watch"
			],
			"group": "build",
			"isBackground": true,
			"label": "yarn tsc: watch - packages/tsconfig.esm.json"
		},
		{
			"command": "yarn",
			"args": [
				"lint"
			],
			"problemMatcher": [
				"$eslint-stylish"
			],
			"group": "build",
			"label": "yarn eslint"
		},
		{
			"command": "yarn",
			"args": [
				"tsc",
				"-b",
				"packages/tsconfig.json",
			],
			"problemMatcher": [
				"$tsc"
			],
			"group": "build",
			"label": "yarn tsc: packages/tsconfig.json"
		},
		{
			"type": "typescript",
			"tsconfig": "packages/tsconfig.esm.json",
			"option": "watch",
			"problemMatcher": [
				"$tsc-watch"
			],
			"group": "build",
			"label": "tsc: watch - packages/tsconfig.esm.json"
		}
	]
}